<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:background="@mipmap/ic_launcher"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#5f1c18" />

    <TextView
        android:text="@string/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#edf6ff"
        android:textColor="#21081b"
        android:textSize="35dp"
        android:shadowColor="#97a8e5"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/textView"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:textColor="#30182a"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:background="#a1f0fcff"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:paddingStart="5dp"
        android:textColor="#30182a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textView3"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:textColor="#30182a"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="#abf0fcff"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#30182a" />

    <Button
        android:text="Sign in"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:id="@+id/button"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:onClick="on_login" />

    <Button
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape_medium"
        android:text="New User?"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:id="@+id/button2"
        android:onClick="registerUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp" />
</RelativeLayout>
